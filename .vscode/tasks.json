{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Install Python deps (site)",
			"type": "shell",
			"command": "pwsh",
			"args": [
				"-NoProfile",
				"-NonInteractive",
				"-Command",
				"python -m pip install --upgrade pip && pip install -r requirements.txt"
			],
			"problemMatcher": [
				"$eslint-stylish"
			],
			"group": "build"
		},
		{
			"label": "Install Python deps (site)",
			"type": "shell",
			"command": "python",
			"args": [
				"-m",
				"pip",
				"install",
				"--upgrade",
				"pip",
				"&&",
				"pip",
				"install",
				"-r",
				"requirements.txt"
			],
			"problemMatcher": [
				"$eslint-stylish"
			],
			"group": "build"
		}
	]
}